<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.pp.parentparadise.CommunityFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/topbar_right"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="#F2C94C"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="朋友"
                android:textColor="#FFF8DC"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topbar_left"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="#F2C94C"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="家長"
                android:textColor="#FFF8DC"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:text="熱愛運動的媽咪"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/demo_mami"
                android:layout_width="150dp"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/demo_mami"

                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
